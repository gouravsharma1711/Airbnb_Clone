<%- layout('./layout/boilerPlate.ejs') %>
<h2>Listing Details</h2>
<body>
    <div class="upperContainer">
        <div class="card mb-3">
            <img src=<%= data.image %> class="card-img-top">
            <div class="card-body">
              <h4 class="card-title" ><%= data.title %> </h4>
              <p class="card-text ListingDescription"><%= data.description %> </p>
              <p class="card-text"><small class="text-body-secondary">&#8377; <%= new Intl.NumberFormat('en-IN').format(data.price) %>/Night </small></p>
              <p class="location"><b><%= data.location %> , <%= data.country %></b></p>
              <div class="buttons">
                <form method="post" action="/listings/<%= data._id%>?_method=DELETE">
                    <button class="b1 DetailButton DeleteListings">Delete Listing</button>
                </form>
                <a href="/listings/edit/<%= data._id%>">
                  <button class="b2 DetailButton EditListings">Edit Listing</button>
                </a>
              </div>
            </div>
          </div>
    </div>
</body>